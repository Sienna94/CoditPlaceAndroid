<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="place"
            type="com.example.coditplace2.dto.ItemData"/>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/wrap"
            android:layout_centerHorizontal="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:src="@drawable/sample1"
                android:scaleType="fitXY"
                android:layout_width="350dp"
                android:layout_height="250dp"/>
            <TextView
                android:id="@+id/tv_visit"
                android:text="방문일 : 2020년 10월 22일 1:10 오후"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/wrap2"
                android:layout_marginTop="100dp"
                android:layout_below="@id/tv_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_icon"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginRight="20dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pname"
                    android:text="1984"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_alignTop="@id/iv_icon"
                    android:layout_toRightOf="@id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_category"
                    android:text="카페"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/iv_icon"
                    android:layout_toRightOf="@id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pphone"
                    android:text="02-325-1984"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/iv_icon"
                    android:layout_toRightOf="@id/tv_category"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wrap3"
                android:background="@color/white"
                android:layout_below="@id/wrap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pcontent"
                    android:textColor="@color/black"
                    android:text="대체적으로 어두운 분위기로 제가 여기에서 일한 경험..."
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/tv_line"
                    android:background="#EAEAEA"
                    android:layout_below="@id/tv_pcontent"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
