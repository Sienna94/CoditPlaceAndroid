<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wrap"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tit"
            android:text="에디터가 공간에 방문한 날짜"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_visit"
            android:text="2020년 10월 22일 1:10 오후"
            android:layout_below="@id/tv_tit"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wrap2"
        android:layout_below="@id/wrap"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tit2"
            android:text="코딧 에디터 코멘트"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_"
            android:text="대체적으로 어두운 분위기로 제가 여기에서 일한 경험으로는 집중하기 좋았습니다. 콘센트도 충분하고, 1~2인 테이블이 다수 배치되어 있어 혼자 가도 좋은 공간이었습니다. 6인 이상 테이블과 회의도 가능한 실내 공간이 있어 활용하면 좋을 것 같습니다. 일하다가 잠시 쉬는 동안 진열되어 있는 다양한 굿즈를 살펴보는 재미도 있었어요. (지갑 도둑들이에요 ㅜㅜ)"
            android:layout_below="@id/tv_tit2"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wrap3"
        android:layout_below="@id/wrap2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tit3"
            android:text="공간 이미지"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridView
            android:id="@+id/grid"
            android:layout_below="@id/tv_tit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/wrap4"
        android:layout_below="@id/wrap3"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tit4"
            android:text="위치"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_map"
            android:src="@drawable/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>