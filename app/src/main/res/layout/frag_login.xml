<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.LoginActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/wrap_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_join"
            android:text="가입하기"
            android:textSize="25sp"
            android:layout_toRightOf="@id/tv_login"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etv_id"
            android:hint="사용자명"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etv_pw"
            android:hint="비밀번호"
            android:layout_below="@id/etv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_login"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_below="@id/etv_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/chkbox"
            android:text="기억하기"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_forgot"
            android:layout_marginLeft="10dp"
            android:text="* 비밀번호를 잊어버리셨나요?"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/chkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>